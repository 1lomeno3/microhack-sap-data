<mvc:View
    controllerName="dsag.de.bupabrowser.controller.Object"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.f.semantic">

    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false"
        busy="{objectView>/busy}"
        busyIndicatorDelay="{objectView>/delay}">

        <semantic:titleHeading>
            <Title
                text="{BusinessPartnerID} | {CompanyName}"
                level="H2"/>
        </semantic:titleHeading>

        <semantic:headerContent>
            <ObjectNumber />
        </semantic:headerContent>

<semantic:content>
			<List
                id="ShortProductList"
                headerText="Attributes">
                <items>
                    <InputListItem
                        label="Address">
                        <Input
                            id="item_carrid"
                            placeholder="Address"
                            value="{Address/Street}, {Address/City}, {Address/PostalCode}, {Address/Country}"
                            enabled="false"/>
                    </InputListItem>
                    <InputListItem
                        label="Business Partner Role">
                        <Input
                            id="item_connid"
                            placeholder="BusinessPartnerRole"
                            value="{
                                path: 'BusinessPartnerRole',
                                formatter: '.formatter.beautifyName'
                            
                            }"
                            enabled="false"/>
                    </InputListItem>
                </items>
            </List>
		</semantic:content>

        <semantic:sendEmailAction>
            <semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress"/>
        </semantic:sendEmailAction>

    </semantic:SemanticPage>

</mvc:View>